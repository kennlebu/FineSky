<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_label_location"
        android:key="@string/pref_key_location"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/pref_label_temp_units"
        android:key="@string/pref_key_temp_units"
        android:defaultValue="@string/pref_temp_units_default"
        android:entryValues="@array/temp_units"
        android:entries="@array/temp_units_labels" />

</PreferenceScreen>